<h1>Post a link! Get Famous!</h1>

{{#error}}
  Sorry yo, there's an error.
{{/error}}

<form class="" action="/links" method="post">
  <div class="{{#error.errors.title}}error{{/error.errors.title}}">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{link.title}}">
    {{#error.errors.title}}
      <div class="error">
        Field is required
      </div>
    {{/error.errors.title}}
  </div>

  <div class="{{#error.errors.body}}error{{/error.errors.body}}">
    <label for="body">Body</label>
    <textarea name="body" rows="8" cols="80">{{link.body}}</textarea>
    {{#error.errors.body}}
      <div class="error">
        Field is required
      </div>
    {{/error.errors.body}}
  </div>

  <div class="">
    <input type="submit" name="" value="Save">
  </div>

</form>
